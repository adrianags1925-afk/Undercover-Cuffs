    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mainSwiper = new Swiper('#main-swiper', {
                loop: true,
                navigation: {
                    nextEl: '#main-swiper .swiper-button-next',
                    prevEl: '#main-swiper .swiper-button-prev',
                },
                pagination: {
                    el: '#main-swiper .swiper-pagination',
                    clickable: true,
                },
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                },
                on: {
                    slideChange: function() {
                        const circularSwiper = document.getElementById('circular-swiper');
                        // Cuando está en la cuarta imagen (índice 3, o cuando loop está activo y es la slide 3)
                        const realIndex = this.realIndex;
                        if (realIndex === 3) {
                            circularSwiper.classList.add('active');
                        } else {
                            circularSwiper.classList.remove('active');
                        }
                    }
                }
            });
            
            const circularSwiper = new Swiper('#circular-swiper', {
                loop: true,
                autoplay: {
                    delay: 2000,
                    disableOnInteraction: false,
                },
            });
            
            // Inicializar otros swipers
            const otherSwipers = document.querySelectorAll('.swiper-container:not(#main-swiper):not(#circular-swiper)');
            otherSwipers.forEach(container => {
                new Swiper(container, {
                    loop: true,
                    navigation: {
                        nextEl: container.querySelector('.swiper-button-next'),
                        prevEl: container.querySelector('.swiper-button-prev'),
                    },
                    pagination: {
                        el: container.querySelector('.swiper-pagination'),
                        clickable: true,
                    },
                    autoplay: {
                        delay: 3000,
                        disableOnInteraction: false,
                    },
                });
            });
        });
        
    let currentIndex = 0;
    const slides = document.querySelector('.slides');
    const totalSlides = document.querySelectorAll('.slides img').length;

    function moveSlide(direction) {
      currentIndex = (currentIndex + direction + totalSlides) % totalSlides;
      const slideWidth = document.querySelector('.carousel').offsetWidth;
      slides.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
    }

  </script>
